{
    "name": "Count words & characters",
    "description": "Simple extension for counting words & characters",
    "version": "1.0",
    "manifest_version": 3, 
    "permissions": ["tabs", "scripting"],
    "host_permissions": [
        "http://*/", "https://*/"
      ],
    "action":{
        "default_popup": "index.html"
    },
    "icons": {
        "16": "./logo16.png",
        "32": "./logo32.png",
        "64": "./logo64.png"
      }
}